<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryanstoughton.lolookup.LookupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true" >

        <EditText
            android:id="@+id/lookupEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginRight="32dp"
            android:hint="@string/lookup_hint" />

        <Button
            android:id="@+id/lookupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="lookupSummoner"
            android:text="@string/lookup_button"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/nameNotFoundErrorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/nameNotFound"
            android:textColor="#CC0000"
            android:layout_gravity="center"
            android:visibility="invisible"/>

    </LinearLayout>

</RelativeLayout>
